{
  "name": "code-review",
  "version": "1.0.0",
  "description": "A collection of smart contract code reviews performed upon friendly request.",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npx jest --testPathIgnorePatterns=etherscanApi.test.ts",
    "test:all": "npx jest",
    "lint": "npx prettier --write 'rate-providers/registry.json'",
    "write-review": "ts-node scripts/write-review.ts",
    "write-erc4626-review": "ts-node scripts/write-erc4626-review.ts",
    "generate-agent": "ts-node scripts/create-agent.ts",
    "format": "npx prettier --write 'scripts/**/*.ts' 'src/**/*.ts'"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.13.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22.13.9",
    "dotenv": "^16.4.7",
    "jest": "^29.7.0",
    "prettier": "3.2.5",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "viem": "^2.23.7"
  }
}
